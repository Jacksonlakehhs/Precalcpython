x1 = float(input("x1: "))
y1 = float(input("y1: "))
x2 = float(input("x2: "))
y2 = float(input("y2: "))

if y2-y1 == 0:
    eq = ("y = {0}".format(y1))
elif x2-x1 == 0:
    eq = ("x = {0}".format(x1))
elif y2-y1 == 0 and x2-x1 == 0:
    eq = "There is no line"
else:
    m = round(((y2-y1)/(x2-x1)), 3)
    b = round(y1-m*x1, 3)
    eq = ("y = {0}x + {1}".format(m, b))

print("The equation is {0}".format(eq))